/**
 * Menu callback; presents the settings form for imagepicker
 */
function imagepicker_settings_page($op = NULL) {

  drupal_add_css(IMAGEPICKER_PATH . '/imagepicker.css');
  $content = drupal_get_form('imagepicker_settings_form');
  return $content;
}

