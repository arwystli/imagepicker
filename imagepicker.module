      $content .= '<fieldset><legend>'. t('List images for %name', array('%name' => $name)) .'</legend>';
      $content .= _imagepicker_browse_admin('admin', $user);
      $content .= '</fieldset>';
    }
    elseif ($imgaction == 'quota') {
