    '#description' => t('Add description for your image')
  );
  // groups
  if ( variable_get('imagepicker_groups_in_upload_enabled', 1) ) {
    $grouplist = imagepicker_get_groups( ($admin ? $account : FALSE));
    if ($grouplist) {
      $form['grouplist'] = array(
